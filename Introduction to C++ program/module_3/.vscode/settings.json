{
    // C/C++ Extension Settings
    "C_Cpp.errorSquiggles": "enabled",
    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.formatting": "default",
    // Editor Suggestions & IntelliSense
    "editor.suggestOnTriggerCharacters": true,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },
    "editor.hover.enabled": true,
    "editor.inlineSuggest.enabled": false, // <-- disable inline ghost text
    "editor.showUnused": true,
    "editor.wordBasedSuggestions": "matchingDocuments",
    "editor.suggestSelection": "first",
    // Validation / Decorations
    "editor.renderValidationDecorations": "on",
    // Optional 3rd-party or custom completion
    "codium.codeCompletion.enable": false // <-- optional: disable inline completions from extensions
}